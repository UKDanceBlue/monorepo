  "version": "0.2.0",
  "configurations": [
    {
      "name": "Common: Watch",
      "request": "launch",
      "runtimeArgs": ["run", "common:watch"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "3shared"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Server: Dev",
      "request": "launch",
      "runtimeArgs": ["run", "server:dev"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "presentation": {
        "group": "6server"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Server: Open Prisma Studio",
      "request": "launch",
      "runtimeArgs": ["run", "server:prisma", "studio"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "6server"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Portal: Dev",
      "request": "launch",
      "runtimeArgs": ["run", "portal:dev"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "5portal"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Portal: Refine Devtools",
      "request": "launch",
      "runtimeArgs": ["run", "portal:refine-devtools"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "5portal"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Mobile: Start",
      "request": "launch",
      "runtimeArgs": ["run", "mobile:start"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/mobile",
      "presentation": {
        "group": "4mobile"
      },
      "env": {
        "REACT_EDITOR": "code",
        "EXPO_PUBLIC_API_BASE_URL": ""
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Mobile: Start (Tunnel)",
      "request": "launch",
      "runtimeArgs": ["run", "mobile:start:tunnel"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/mobile",
      "presentation": {
        "group": "4mobile"
      },
      "env": {
        "REACT_EDITOR": "code"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Debug Portal",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/portal/src",
      "presentation": {
        "group": "5portal"
      }
    },
    {
      "name": "Debug Expo",
      "request": "attach",
      "type": "reactnativedirect",
      "cwd": "${workspaceFolder}/packages/mobile",
      "presentation": {
        "group": "4mobile"
      }
    },
    {
      "name": "Tunnel Server",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "bash",
      "args": ["${workspaceFolder}/.devcontainer/tunnel.sh", "server"],
      "autoAttachChildProcesses": false,
      "presentation": {
        "hidden": true
      },
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Dev Environment: Base",
      "configurations": ["Common: Watch"],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 3
      }
    },
    {
      "name": "Dev Environment: Server",
      "configurations": ["Server: Dev", "Common: Watch", "Tunnel Server"],
      "preLaunchTask": "Server: Prisma Generate",
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: Portal",
      "configurations": [
        "Server: Dev",
        "Portal: Dev",
        "Portal: Refine Devtools",
        "Common: Watch"
      ],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: Mobile (Tunnlled)",
      "configurations": [
        "Server: Dev",
        "Mobile: Start (Tunnel)",
        "Common: Watch",
        "Tunnel Server"
      ],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: Mobile",
      "configurations": [
        "Server: Dev",
        "Mobile: Start",
        "Common: Watch"
      ],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: * (Tunnlled)",
      "configurations": [
        "Server: Dev",
        "Portal: Dev",
        "Portal: Refine Devtools",
        "Mobile: Start (Tunnel)",
        "Common: Watch",
        "Tunnel Server"
      ],
      "preLaunchTask": "Server: Prisma Generate",
      "presentation": {
        "group": "0dev-enviroment",
        "order": 1
      }
    }
    {
      "name": "Dev Environment: *",
      "configurations": [
        "Server: Dev",
        "Portal: Dev",
        "Portal: Refine Devtools",
        "Mobile: Start",
        "Common: Watch"
      ],
      "preLaunchTask": "Server: Prisma Generate",
      "presentation": {
        "group": "0dev-enviroment",
        "order": 1
      }
    }
  ]
}
