  @@index([uuid])
}

model File {
  id   Int    @id @default(autoincrement())
  uuid String @unique() @default(uuid()) @db.Uuid

  filename        String
  mimeTypeName    String   @db.VarChar(127)
  mimeSubtypeName String   @db.VarChar(127)
